<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    <EditText
        android:id="@+id/mesurements_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/measurements_edit_name"
        android:imeOptions="actionNext" >
        <requestFocus />
    </EditText>
    
     <TextView
        android:id="@+id/mesurements_edit_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:lines="1"
        android:text="@string/measurements_edit_datetime"
        android:textSize="12dp" >
    </TextView>
    


    <Button
        android:id="@+id/measurements_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/measurements_edit_confirm" >
    </Button>

</LinearLayout> 